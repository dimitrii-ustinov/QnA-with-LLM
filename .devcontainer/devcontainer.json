{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
  }
}

{
  "name": "Python 3.9 Environment",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",  // Use a base image with Python 3.9
  "settings": {
    "python.pythonPath": "/usr/local/bin/python3"
  },
  "extensions": [
    "ms-python.python",
    "ms-azuretools.vscode-docker"
  ],
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "vscode"
}
